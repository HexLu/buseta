<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/card_item_height_singleline"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/card_item_icon"
        android:layout_height="@dimen/card_item_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/card_horizontal_margin"
        android:layout_marginRight="@dimen/card_horizontal_margin"
        android:contentDescription="@string/content_description_icon"
        android:gravity="center"
        android:src="@drawable/ic_directions_railway_black_24dp"
        android:tint="@color/icons" />

    <TextView
        android:id="@+id/name"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/icon"
        android:layout_toEndOf="@id/icon"
        android:layout_toLeftOf="@id/circle"
        android:layout_toStartOf="@id/circle"
        android:layout_marginLeft="@dimen/card_item_text_margin_start"
        android:layout_marginStart="@dimen/card_item_text_margin_start"
        android:gravity="center_vertical"
        android:textColor="@color/textPrimary"
        tool:text="ROUTE" />

    <ImageView
        android:id="@+id/circle"
        android:layout_width="@dimen/card_item_icon"
        android:layout_height="@dimen/card_item_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/card_horizontal_margin"
        android:layout_marginRight="@dimen/card_horizontal_margin"
        android:contentDescription="@string/content_description_icon"
        android:gravity="center"
        android:src="@drawable/circle_48dp"
        android:tint="@color/icons" />

</RelativeLayout>