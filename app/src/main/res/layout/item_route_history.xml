<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginTop="@dimen/card_vertical_margin"
    android:layout_marginBottom="@dimen/card_vertical_margin"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/card_item_height_singleline">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/card_item_icon_touch_target_dense"
            android:layout_height="@dimen/card_item_icon_touch_target_dense"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/card_horizontal_margin"
            android:layout_marginRight="@dimen/card_horizontal_margin"
            android:contentDescription="@string/content_description_icon"
            android:tint="@color/icons"
            android:src="@drawable/ic_history_black_24dp"/>

        <TextView
            android:id="@android:id/text1"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/card_item_vertical_padding"
            android:layout_marginLeft="@dimen/card_item_text_margin_start"
            android:layout_marginStart="@dimen/card_item_text_margin_start"
            android:layout_marginTop="@dimen/card_item_vertical_padding"
            android:gravity="center_vertical"
            android:textColor="@color/textPrimary"
            tool:text="ROUTE"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>